{
  "name": "@orca-so/whirlpools-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "packageManager": "yarn@4.4.0",
  "type": "module",
  "scripts": {
    "build": "nx run-many --target build --projects",
    "start": "nx run-many --target start --projects",
    "test": "nx run-many --target test --projects",
    "format": "nx run-many --target format --projects",
    "lint": "nx run-many --target lint --projects",
    "clean": "nx reset && nx run-many --target clean --projects",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/bn.js": "~5.1.5",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.1",
    "@types/sinon": "^17.0.3",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "mocha": "^10.7.3",
    "nx": "^19.6.4",
    "rimraf": "^6.0.1",
    "sinon": "^18.0.0",
    "ts-mocha": "^10.0.0"
  },
  "workspaces": [
    "programs/*",
    "rust-sdk/*",
    "ts-sdk/*",
    "legacy-sdk/*",
    "docs/*"
  ],
  "lint-staged": {
    "*": "yarn format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orca-so/whirlpools.git"
  },
  "keywords": [
    "orca_so",
    "orca",
    "solana",
    "typescript",
    "sdk",
    "crypto",
    "dex"
